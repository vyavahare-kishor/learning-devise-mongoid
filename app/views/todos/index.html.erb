<p id="notice"><%= notice %></p>
<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'View list', todos_path %></li>
  <li><%= link_to 'New todo', new_todo_path %></li>
</ul>
<h1>Todos</h1>
<%= form_for :term, url: todos_path, method: :get do |form| %>
  <p>
    <%= text_field_tag :term, params[:term] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Notes</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @todos.each do |todo| %>
    <tr>
      <td>
        <span class="has-tooltip" data-toggle="tooltip" title="Date<%#= "Created on #{todo.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{todo.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>">
          <%= todo.title %>
        </span>
      </td>
      <td>
        <% if todo.notes? %>
        <!-- Button trigger modal -->
        <button class="btn btn-link" data-toggle="modal" data-target="#todo-<%= todo.id %>-notes">
        View notes
        </button>
        <!-- Modal -->
        <div class="modal fade" id="todo-<%= todo.id %>-notes" tabindex="-1" role="dialog" aria-labelledby="todo-<%= todo.id %>-label" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="todo-<%= todo.id %>-label">Notes</h4>
              </div>
              <div class="modal-body">
                <%= todo.notes %>
                <h5> Description</h5>
                <span>
                  <% todo.comments.each do |comment| %>
                  <%= comment.description %><br>
                  <% end %>
                </span>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </td>
      <td><%= link_to 'Add Comments', new_todo_comment_path(todo),  class: 'btn btn-primary btn-xs' %></td>
      <td><%= link_to 'Show', todo,  class: 'btn btn-primary btn-xs' %></td>
      <td><%= link_to 'Edit', edit_todo_path(todo),  class: 'btn btn-info btn-xs' %></td>
      <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' },  class: 'btn btn-danger btn-xs' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to new_todo_path, class: 'btn btn-success' do %>
<i class="glyphicon glyphicon-plus"></i> New Todo
<% end %>